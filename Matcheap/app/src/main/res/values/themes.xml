<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Seoul_Matcheap" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/matcheap_blue</item>
        <item name="colorPrimaryVariant">@color/matcheap_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/matcheap_blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/matcheap_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/matcheap_black</item>
        <item name="android:statusBarColor">@color/white</item>

        <!-- Splash Screen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/matcheap_blue</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_title_white</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1500</item>

        <!--system font-->
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="Theme.Seoul_Matcheap.Store" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/matcheap_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/matcheap_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/matcheap_black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--system font-->
        <item name="android:letterSpacing">-0.03</item>
    </style>
    

</resources>